@{
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<h2>Login</h2>
<div class="centro-pagina">
    <table >
        <tr>
            <td>Usuário</td>
            <td><input type="text" id="usuario" /></td>
        </tr>
        <tr>
            <td>Senha</td>
            <td><input type="password" id="senha" /></td>
