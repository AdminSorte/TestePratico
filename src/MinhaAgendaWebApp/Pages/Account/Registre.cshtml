@page
@model MinhaAgendaWebApp.Pages.Account.RegistreModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Minha Agenda - LOGIN";
    Layout = "~/Pages/Shared/_LayoutLogin.cshtml";

}



<div>
    <br />
    <img src="~/img/Registre.jpg" style="width:50%">
</div>
<br />

<form method="post">
    <div>
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger" role="alert" style="text-align:center">
                @TempData["error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="input-group-prepend">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <input asp-for="usuarioRegistro.Email" class="form-control" placeholder="Usuario" required="">
    </div>
    <span asp-validation-for="usuarioRegistro.Email" class="text-danger"></span>
    <br />
    <div class="input-group-prepend">
        <span class="input-group-addon "><i class="fa fa-lock"></i></span>
        <input type="password" asp-for="usuarioRegistro.Password" class="form-control" placeholder="Senha" required="">
    </div>
    <span asp-validation-for="usuarioRegistro.Password" class="text-danger"></span>
    <br />
    <div class="input-group-prepend">
        <span class="input-group-addon "><i class="fa fa-lock"></i></span>
        <input type="password"  asp-for="usuarioRegistro.ConfirmPassword" class="form-control" placeholder="Senha" required="">
    </div>
    <span asp-validation-for="usuarioRegistro.ConfirmPassword" class="text-danger"></span>
    <br />

    <button input type="submit" class="btn btn-success block full-width m-b">Cadastra</button>
    <p class="text-muted text-center"><small>Clique no botao Login para Acessa o Site</small></p>
    <a class="btn btn-sm btn-white btn-block" asp-page="/Account/Login">Login</a>
</form>
