@model SO.Agenda.Application.ViewModels.TaskItemViewModel
@{
    ViewData["Title"] = "FormTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="FormTask" method="post" enctype="multipart/form-data">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="col-md-12">
            <p style="font-weight:bold">Task Item</p>
            <hr />
            <input id="idTaskItem" type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        Title
                        <input type="text" asp-for="Title" class="form-control" />
                           <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        Day
                        <input type="date" asp-for="DateTime" class="form-control" />
                           <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        Description
                        <textarea asp-for="Description" class="form-control"></textarea>
                           <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                  <div class="col-md-12">
                <a class="btn btn-secondary" asp-action="Index">Back</a>
                      <input type="submit" value="Save" class="btn btn-success" />
                 </div>
            </div>
             <hr />
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
